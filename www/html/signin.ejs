<div class='fp-box'>
    <form role="form" (ngSubmit)="signin()">
        <div class="form-group">
            <input name="email" type="email" class="form-control" id="email" placeholder="Your email address">
        </div>
        <div class="form-group">
            <input name="password" type="password" class="form-control" id="password" placeholder="Create a password">
        </div>
        <div class="fp-invalid">{{errorMsg}}</div>
        <div class="row">
            <div class="col-xs-5">
                <button type="submit" class="btn btn-success">Sign in</button>
            </div>
            <div class="col-xs-7 fp-switch">
                <p> No account? <a href="#">Sign up</a></p>
            </div>
        </div>
    </form>
</div>
