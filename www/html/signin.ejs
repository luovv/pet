<div class='fp-box' data-bind="visible: isSignin">
    <form>
        <div class="form-group">
            <input data-bind="value: email" name="email" type="email" class="form-control" id="email" placeholder="Your email address">
        </div>
        <div class="form-group">
            <input data-bind="value: password" name="password" type="password" class="form-control" id="password" placeholder="Create a password">
        </div>
        <div class="sign-invalid" data-bind="text:signinErrorMsg"></div>
        <div class="row">
            <div class="col-xs-5">
                <button type="button" data-bind="click: submitSignin" class="btn btn-success">Sign in</button>
            </div>
            <div class="col-xs-7 fp-switch">
                <p> No account? <a data-bind="click:switchSign">Sign up</a></p>
            </div>
        </div>
    </form>
</div>
